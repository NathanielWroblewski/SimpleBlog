<div class="container">

<ul>
  <li><a href="/blog">My Blog</a></li>
  <li><a href="/post">Add Post</a></li>
  <li><a href="/logout">Logout</a></li>
</ul>

<% @all_posts.each do |post| %>
<h4><%= post.title %></h4>
<h6><a href="/blog/<%= post.author.scan(/.*(?=@)/).join %>"><%= post.author.scan(/.*(?=@)/).join %></a>
<p><%= post.body %></p>
<% end %>

</div>
